<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/manage_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:layout_weight="1"
        android:layout_marginTop="100dp"
        android:gravity="center"
        >

        <ImageView
            android:id="@+id/main_manage_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/activity_main_manage_iv_selector" 
            android:layout_gravity="bottom"
            />

        <ImageView
            android:id="@+id/main_control_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/activity_main_control_iv_selector" 
             android:layout_gravity="bottom"
            />
        
    </LinearLayout>

    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:layout_weight="1"
          android:gravity="center"
        >

        <ImageView
            android:id="@+id/main_camera_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/activity_main_camera_iv_selector" 
            android:layout_gravity="top"
            />


        <ImageView
            android:id="@+id/main_location_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/activity_main_location_iv_selector"
            android:layout_gravity="top"
             />
        
    </LinearLayout>
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="60dp" 
            android:gravity="right"
            >

        <ImageView
            android:id="@+id/main_music_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/main_music_btn" 
            />

        </LinearLayout>
</LinearLayout>
