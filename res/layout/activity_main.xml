<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" android:orientation="vertical"
        android:background="@drawable/bg"
    android:layout_height="fill_parent">
        <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:background="@drawable/manage_bg_title"
        >
    </LinearLayout>
    
    
    <!-- 中间动态加载View -->
    <LinearLayout android:measureAllChildren="true" android:id="@+id/containerBody"
        android:layout_weight="1" android:layout_height="fill_parent"
        android:layout_width="fill_parent">
    </LinearLayout>
    

    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:background="@drawable/menu_bg"
android:weightSum="5"        
        android:gravity="center"
        >

        <ImageView
            android:id="@+id/menu_manage_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/menu_manage_iv_selector" 
            android:layout_weight="1"
            />

        <ImageView
            android:id="@+id/menu_control_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/menu_control_iv_selector" 
            android:layout_weight="1"
            />

        <ImageView
            android:id="@+id/menu_main_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/menu_main_iv_selector" 
            android:layout_weight="1"
            />

        <ImageView
            android:id="@+id/menu_camera_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/menu_camera_iv_selector" 
            android:layout_weight="1"
            />

        <ImageView
            android:id="@+id/menu_location_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/menu_location_iv_selector" 
            android:layout_weight="1"
            />
        
    </LinearLayout>
</LinearLayout>