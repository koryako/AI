<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@drawable/bg"
    >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:background="@drawable/manage_bar_bg"
        android:gravity="center_vertical"
        >

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back_iv_selector" 
            android:layout_weight="1"
            />

        <TextView
            android:id="@+id/userlist_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/user_list"
            android:textSize="@dimen/list_title_size"
            android:gravity="center"
             />

        <ImageView
            android:id="@+id/add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/list_add_iv_selector" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:background="@drawable/list_bg"
        android:gravity="center_horizontal"
        android:layout_weight="1"
		android:layout_margin="10dp"
        >
            
     <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" 
        android:background="@drawable/list_small_bg"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:orientation="vertical"
        >
    <ListView
        android:id="@+id/userlist"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" 
        android:padding="5dp"
        android:background="@drawable/list_small_bg"
        android:divider="@drawable/list_line"
        android:cacheColorHint="#00000000"
        
        >
    </ListView>
    </LinearLayout>
</LinearLayout>
</LinearLayout>